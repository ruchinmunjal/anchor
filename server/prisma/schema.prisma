generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum NoteState {
  active
  trashed
  deleted
}

enum UserStatus {
  active
  pending
}

enum NoteSharePermission {
  viewer
  editor
}

model User {
  id                 String           @id @default(uuid())
  email              String           @unique
  password           String?
  name               String
  profileImage       String?
  apiToken           String?          @unique
  isAdmin            Boolean          @default(false)
  status             UserStatus       @default(active)
  oidcSubject        String?          @unique
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  notes              Note[]
  tags               Tag[]
  sharedNotes        NoteShare[]      @relation("SharedBy")
  notesSharedWithMe  NoteShare[]      @relation("SharedWith")
  refreshTokens      RefreshToken[]
}

model Settings {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Note {
  id         String      @id @default(uuid())
  title      String
  content    String?  
  isPinned   Boolean     @default(false)
  isArchived Boolean     @default(false)
  background String?
  state      NoteState   @default(active)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  userId     String
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags       Tag[]
  sharedWith NoteShare[]
}

model Tag {
  id        String    @id @default(uuid())
  name      String
  color     String?
  isDeleted Boolean   @default(false)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  notes     Note[]

  @@unique([userId, name])
}

model NoteShare {
  id              String         @id @default(uuid())
  noteId          String
  note            Note           @relation(fields: [noteId], references: [id], onDelete: Cascade)
  sharedWithUserId String
  sharedWithUser  User           @relation("SharedWith", fields: [sharedWithUserId], references: [id], onDelete: Cascade)
  permission      NoteSharePermission
  sharedByUserId  String
  sharedByUser    User           @relation("SharedBy", fields: [sharedByUserId], references: [id], onDelete: Cascade)
  isDeleted       Boolean        @default(false)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@unique([noteId, sharedWithUserId])
  @@index([noteId])
  @@index([sharedWithUserId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}
